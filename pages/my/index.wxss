/* pages/my/index.wxss */

page {
  background: #f5f5f5
}

.header {
  width: 100%;
  height: 320rpx;
  background: #0091ea;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx
}
.userAvatarUrl{
    width: 120rpx;
    height: 120rpx;
    border: 1px solid #fff;
    border-radius: 50%;
    overflow: hidden; 
  }
  .userNickName {
    width: 500rpx;
    height: 44rpx;
    line-height: 44rpx;
    color: #fff;
    font-size: 44rpx;
    padding-top: 8rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    margin-left: 24rpx
  }
.userinfo {
  display: flex;
  margin-left: 30rpx;
  align-items: center
}
.userinfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
}
.userinfo text {
  font-size: 44rpx;
  color: white;
  margin-left: 20rpx
}


.menuItem {
  display: flex;
  height: 111rpx;
  align-items: center;
  background: white;
  padding-left: 60rpx;
  position: relative
}
.menuItem image {
  width: 50rpx;
  height: 50rpx;
}

.img-arrow {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 40rpx
}

.menuItem text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx
}

.divider {
  height: 1rpx;
  background: #f5f5f5
}
.exit {
  display: flex;
  height: 111rpx;
  align-items: center;
  justify-content: center;
  background: white;
  position: relative;
  margin-top: 30rpx
}
.exit text {
  font-size: 32rpx;
  color: #333;
}