/* pages/edit/index.wxss */

.title-wrap {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #333;
  margin-left: 40rpx;

}
.title-input-placeholder {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
}
.title-input {
  width: 580rpx;
  display: flex;
  font-size: 34rpx;
  color: #333;
  margin-left: 20rpx;
}
.divider {
  height: 2rpx;
  background: #d5d5d5
}
.content-wrap {
  position: relative;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: 300rpx;
}
.content {
  font-size: 34rpx;
  color: #333;
  margin-left: 40rpx;
  line-height: 40rpx
}
.content-input {
  display: flex;
  font-size: 34rpx;
  color: #333;
  width: 580rpx;
  position: absolute;
  top: 0rpx;
  margin-top: 20rpx;
  left: 140rpx;
  line-height: 38rpx;
}
.content-input-placeholder {
  font-size: 34rpx;
  width: 580rpx;
}
.priority-wrap {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.priority {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #333;
  margin-left: 40rpx;

}
radio-group{
  display: flex;
}

radio {
  font-size: 30rpx;
  margin-left: 20rpx
}


radio .wx-radio-input{
   width: 25rpx;
   height: 25rpx
}

radio .wx-radio-input.wx-radio-input-checked{
   width: 25rpx;
   height: 25rpx;
}

.date-wrap {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.date {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #333;
  margin-left: 40rpx;
}


picker-view {
  width: 100%;
  height: 500rpx;
}
.action-top {
  padding-top: 20rpx;
  padding-bottom: 20rpx
}
.cancel {
  font-size: 38rpx;
  color: #0091ea;
  margin-left: 40rpx
}
.confirm {
  font-size: 38rpx;
  color: #0091ea;
  position: absolute;
  right: 40rpx
}

.save {
  font-size: 30rpx;
  color: #0091ea; 
  margin-top: 50rpx;
  background: white;
  border: 3rpx solid #0091ea;
  width: 80%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.hover-save {
  font-size: 30rpx;
  color: white; 
  margin-top: 50rpx;
  background: #e6e6e6;
  border: 3rpx solid #e6e6e6;
  width: 80%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}